<resources>

    <!-- Base application theme. -->
    <style name="AppLightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorThemeLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppDarkTheme" parent="android:Theme.Black.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkTheme</item>
        <item name="colorPrimaryDark">@color/darkPrimary</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppLightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/welcome_activity_background</item>
    </style>

</resources>
