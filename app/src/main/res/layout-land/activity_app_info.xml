<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_app_info_layout"
    android:background="@drawable/logo"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tseluikoartem.ening.yandexmobdevproject.welcomepage.AppInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorAccentLight" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="48dp"
            android:id="@+id/linearLayout">
            <ImageButton
                android:id="@+id/imageViewAppIcon"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textViewDiscrApp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/imageViewAppIcon"
                android:text="@string/app_welcome_info"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>


        <Button
            android:id="@+id/buttonToSettings"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonToApp"
            android:layout_marginStart="48dp"
            android:layout_toEndOf="@+id/buttonToApp"
            android:background="@drawable/roundedbutton"
            android:text="@string/go_to_guide"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonToApp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="48dp"
            android:background="@drawable/roundedbutton"
            android:text="@string/go_to_app"
            android:textAlignment="center"
            android:textSize="15sp" />

    </RelativeLayout>
</FrameLayout>